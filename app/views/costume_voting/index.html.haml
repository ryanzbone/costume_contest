%h1 Costume Voting
.progress.mb-3
  .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => @progress, :role => "progressbar", :style => "width: #{@progress}%;"}= "#{@existing_costume_votes.count} / #{@costume_ids.count}"

- if @entry
  .row
    .col
      .invisible= current_voter.uuid
      %h2#entry-name= @entry.name
      = image_tag @entry.picture.url, class: 'img-fluid mb-3'
  .row
    .col-6
      = form_with url: costume_down_vote_path(@entry.id), local: true do |form|
        = form.submit 'Down vote', class: 'btn btn-success btn-block'
    .col-6
      = form_with url: costume_up_vote_path(@entry.id), local: true do |form|
        = form.submit 'Up vote', class: 'btn btn-success btn-block mb-2'
- else
  .alert.alert-primary{:role => "alert"}
    = "You've voted on all the costumes, now #{link_to('check out the houses', houses_path)}!".html_safe
