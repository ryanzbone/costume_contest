- if @entry
  .row
    .col
      .invisible= current_voter.uuid
      %h1#entry-name= @entry.name
      = image_tag @entry.picture.url, class: 'img-fluid'
  .row
    .col-6
      = form_with url: down_vote_path(@entry.id), local: true do |form|
        = form.submit 'Down vote', class: 'btn btn-success btn-block'
    .col-6
      = form_with url: up_vote_path(@entry.id), local: true do |form|
        = form.submit 'Up vote', class: 'btn btn-success btn-block mb-2'
- else
  Check back later for more entries
